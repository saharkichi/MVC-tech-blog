<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
    <i class="fas fa-thumbs-up" id="thumbup" ></i> <h5>You've got {{thumbs-up}} upvotes!</h5>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Ask a new question:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Question:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-description">Description:</label>
        <textarea class="form-input" id="post-description" name="post-description"></textarea>
      </div>
            <div class="form-group">
      </div>
            <div class="form-group">
      </div>

        <div class="form-group">
          
         <button type="submit" class="btn btn-primary">Create</button>
        </div>
        <div id="app"></div>
      
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list"> 
      <h3>Current Posts:</h3>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}} 
  {{/if}}
</div>

<script src="./js/profile.js"></script>
